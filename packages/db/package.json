{
  "name": "@/db",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./prisma/generated/client.ts"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore ./prisma/.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "postinstall": "pnpm run generate",
    "generate": "prisma generate",
    "push": "pnpm with-env prisma db push",
    "migrate": "TS_NODE_DEV=1 pnpm with-env tsx ./src/migrate.ts",
    "with-env": "dotenv -e ../../.env --"
  },
  "devDependencies": {
    "@/eslint-config": "workspace:*",
    "@/prettier-config": "workspace:*",
    "@/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "dotenv-cli": "catalog:",
    "eslint": "catalog:eslint",
    "mongo-migrate-ts": "^1.6.2",
    "prettier": "catalog:prettier",
    "prisma": "^6.7.0",
    "tsx": "^4.20.3",
    "typescript": "catalog:"
  },
  "prettier": "@/prettier-config",
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@t3-oss/env-core": "catalog:",
    "zod": "catalog:"
  }
}
