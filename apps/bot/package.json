{
  "name": "@/bot",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "git clean -xdf .next .turbo node_modules",
    "build": "pnpm run generate-i18next-res && tsup-node",
    "dev": "pnpm with-env pnpm build --watch . --watch ../../packages --onSuccess \"node dist/index.js\"",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "pnpm with-env node ./dist/index.js",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --",
    "generate-i18next-res": "i18next-resources-for-ts interface -i ./src/locales/en-US -o ./src/@types/resources.d.ts",
    "postgenerate-i18next-res": "pnpm run format --write ./src/@types/resources.d.ts ./src/locales/**/*.json"
  },
  "devDependencies": {
    "@/eslint-config": "workspace:*",
    "@/prettier-config": "workspace:*",
    "@/tsconfig": "workspace:*",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^22.10.10",
    "dotenv-cli": "^7.4.1",
    "eslint": "^9.27.0",
    "prettier": "^3.4.2",
    "tsup": "^8.0.2",
    "typescript": "^5.8.3"
  },
  "prettier": "@/prettier-config",
  "dependencies": {
    "@/common": "workspace:*",
    "@/db": "workspace:*",
    "@/logger": "workspace:*",
    "@/redis": "workspace:*",
    "@discordjs/builders": "^1.11.2",
    "@t3-oss/env-core": "^0.13.4",
    "bufferutil": "^4.0.8",
    "cron": "^3.1.7",
    "discord-api-types": "^0.38.18",
    "discord.js": "^14.21.0",
    "i18next": "^23.11.5",
    "i18next-resources-for-ts": "^1.5.0",
    "ollama": "^0.5.9",
    "utf-8-validate": "^6.0.3",
    "zod": "^3.24.4"
  }
}
